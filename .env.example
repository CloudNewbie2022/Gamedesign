# Server Configuration
PORT=4000
NODE_ENV=development

# API Keys (for future integrations)
GOOGLE_BOOKS_API_KEY=your_google_books_api_key_here
GOODREADS_API_KEY=your_goodreads_api_key_here

# Database Configuration (for future database integration)
DATABASE_URL=mongodb://localhost:27017/readstock
# or
# DATABASE_URL=postgresql://username:password@localhost:5432/readstock

# JWT Secret (for future authentication)
JWT_SECRET=your_super_secret_jwt_key_here

# StoryGraph Integration (if available in future)
STORYGRAPH_API_KEY=your_storygraph_api_key_here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Session Configuration
SESSION_SECRET=your_session_secret_here